#!/usr/bin/env ruby
# frozen_string_literal: true

require "docusearch"

ELASTICSEARCH_DOMAIN = "http://localhost:9200"
client = Docusearch::Model::Client.new(ELASTICSEARCH_DOMAIN)

# Fill elasticsearch with random documents
100_000.times do
  document = Docusearch::Model::RandomDocument.new
  puts document.to_json
  documents = Docusearch::Model::Documents.new(client)
  puts documents.add(document)
end
